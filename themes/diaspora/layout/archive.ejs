<div id="archive">
    <%- partial("_partial/post/header")%>
    <div class="article">
        <div class='main'>
          <h1 class="title">归档</h1>
          <ul class="post-archive">
            <% site.posts.sort("date", "desc").each(function (post) { %>
              <li class="post-item">
                <div class="post-title">
                  <a href="<%- url_for(post.path) %>"><%= post.title %></a>
                </div>
                <div class="post-sub-title">
                    <span class="post-date"><%= date(post.date, "YYYY-MM-DD") %></span>
                    <%- partial('_partial/post/tag', {post: post}) %>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
    </div> 
</div>
